{
  "build": {
    "beforeDevCommand": "trunk serve",
    "beforeBuildCommand": "trunk build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "thot_desktop",
    "version": "0.10.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "open": true
      },
      "fs": {
          "scope": ["$RESOURCE/*"]
      },
      "shell" : {
        "sidecar": true,
        "scope": [
          { "name": "../../target/release/thot-local-database", "sidecar": true }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "../../target/release/thot-local-database"
      ],
      "icon": [
        "assets/icons/32x32.png",
        "assets/icons/128x128.png",
        "assets/icons/128x128@2x.png",
        "assets/icons/icon.icns",
        "assets/icons/icon.ico"
      ],
      "identifier": "so.thot.www",
      "longDescription": "Visual data management and analysis tools using Thot's framework.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "shortDescription": "Desktop app for Thot.",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
      "resources": [
          "assets/**"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.thot.so/{{target}}/{{current_version}}?arch={{arch}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdGQzk2RDg2RjkwNUVGMzAKUldRdzd3WDVobTNKZjFGcy82bnRpd3NaaDZ6VTAwUFBUOXhPVGhHN3NTRXhRQVRscURTL0k4eTkK"
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "thot_desktop",
        "width": 800,
        "visible": false
      },
      {
          "width": 400,
          "height": 200,
          "decorations": false,
          "url": "public/splashscreen.html",
          "label": "splashscreen"
      }
    ],
    "systemTray": {
      "iconPath": "assets/icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
